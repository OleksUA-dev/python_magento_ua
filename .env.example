# .env.example - Приклад конфігурації для magento-python-ua

# Основні налаштування Magento
MAGENTO_BASE_URL=https://your-magento-store.com
MAGENTO_USERNAME=your_api_username
MAGENTO_PASSWORD=your_api_password

# Налаштування безпеки
MAGENTO_VERIFY_SSL=true
MAGENTO_ENABLE_ENCRYPTION=false
MAGENTO_ENCRYPTION_KEY=your_32_character_encryption_key_

# Мережеві налаштування
MAGENTO_TIMEOUT=30
MAGENTO_MAX_RETRIES=3
MAGENTO_RATE_LIMIT=100
MAGENTO_RATE_LIMIT_WINDOW=60
MAGENTO_MAX_CONNECTIONS=100
MAGENTO_MAX_KEEPALIVE_CONNECTIONS=20

# Проксі (опціонально)
# MAGENTO_PROXY_URL=http://proxy.company.com:8080
# MAGENTO_PROXY_AUTH=username:password

# Логування
MAGENTO_LOG_LEVEL=INFO
MAGENTO_LOG_FORMAT=json
MAGENTO_ENABLE_REQUEST_LOGGING=false

# Кешування (для майбутніх версій)
MAGENTO_ENABLE_CACHE=false
MAGENTO_CACHE_TTL=3600
MAGENTO_CACHE_MAX_SIZE=1000

# Брокер подій (для майбутніх версій)
# MAGENTO_EVENT_BROKER=memory
# MAGENTO_REDIS_URL=redis://localhost:6379
# MAGENTO_RABBITMQ_URL=amqp://localhost:5672

# Метрики (для майбутніх версій)
MAGENTO_ENABLE_METRICS=false
MAGENTO_METRICS_PORT=9090

# Circuit Breaker (для майбутніх версій)
MAGENTO_CIRCUIT_BREAKER_THRESHOLD=5
MAGENTO_CIRCUIT_BREAKER_TIMEOUT=60