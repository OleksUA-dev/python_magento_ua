# Magento API Configuration
# Основні налаштування для підключення до локальної Magento

# URL вашої Magento інсталяції
MAGENTO_BASE_URL=http://localhost:8080

# API користувач (потрібно створити в Magento Admin)
# System > Extensions > Integrations > Add New Integration
MAGENTO_USERNAME=admin
MAGENTO_PASSWORD=admin123

# Альтернативно можна використовувати токен напряму
# MAGENTO_API_TOKEN=your_bearer_token_here

# Налаштування безпеки
MAGENTO_VERIFY_SSL=false
MAGENTO_CA_BUNDLE=
MAGENTO_CLIENT_CERT=
MAGENTO_ENABLE_ENCRYPTION=false
MAGENTO_ENCRYPTION_KEY=

# Мережеві налаштування
MAGENTO_TIMEOUT=30
MAGENTO_MAX_RETRIES=3
MAGENTO_RETRY_DELAY=1.0
MAGENTO_MAX_CONNECTIONS=100
MAGENTO_MAX_KEEPALIVE_CONNECTIONS=20

# Rate Limiting
MAGENTO_RATE_LIMIT=100
MAGENTO_RATE_LIMIT_WINDOW=60

# Проксі (якщо потрібно)
MAGENTO_PROXY_URL=
MAGENTO_PROXY_AUTH=

# Кешування
MAGENTO_ENABLE_CACHE=false
MAGENTO_CACHE_TTL=3600
MAGENTO_CACHE_MAX_SIZE=1000

# Логування
MAGENTO_LOG_LEVEL=DEBUG
MAGENTO_LOG_FORMAT=text
MAGENTO_ENABLE_REQUEST_LOGGING=true

# Брокер подій (для тестування)
MAGENTO_EVENT_BROKER=memory
MAGENTO_REDIS_URL=redis://localhost:6379
MAGENTO_RABBITMQ_URL=

# Метрики
MAGENTO_ENABLE_METRICS=false
MAGENTO_METRICS_PORT=9090

# Circuit Breaker
MAGENTO_CIRCUIT_BREAKER_THRESHOLD=5
MAGENTO_CIRCUIT_BREAKER_TIMEOUT=60

# Додаткові налаштування для розробки
MAGENTO_DEBUG=true
MAGENTO_DEV_MODE=true

# Тестування
MAGENTO_TEST_MODE=true
MAGENTO_REAL_API_TEST=false